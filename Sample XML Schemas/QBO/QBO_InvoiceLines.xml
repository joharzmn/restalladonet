  <Operations>
    <DataAction Operation="Select" Method="POST" ContentType="application/text">
      <Url>^[Connection.URL]^/v3/company/^[Token.realmid]^/query?minorversion=65</Url>
	  <Body>select * from Invoice</Body>
    </DataAction>
